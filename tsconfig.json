{
  "compilerOptions": {
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es5",
      "es2015.promise",
      "es7",
      "es2017",
      "es2017.object"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true,

    // paths
    "baseUrl": "./",
    "paths": {
    }
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
  ],
  "compileOnSave": true
}
